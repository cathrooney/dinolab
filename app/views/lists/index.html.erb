<% @lists.each do |list| %>
	<h3>
		<%= list.name %> 
		<small>
			<%= link_to "Edit", edit_list_path(list) %> |
			<%= link_to "Delete", list_path(list), method: :delete, confirm: "Are you sure???" %>
		</small>
	</h3>

	<ul>
	<% list.contacts.each do |contact| %>
	<li>
		<%= contact.name %>
		<small>
			<%= link_to "Edit", edit_contact_path(contact) %> |
			<%= link_to "Delete", contact_path(contact), method: :delete, confirm: "Are you sure???" %>
		</small>
	<% end %>
	</ul>
<% end %>

<% if @lists.any? %>
	<p><%= link_to "New contact", new_contact_path %></p>
<% end %>

<p><%= link_to "New list", new_list_path %></p>