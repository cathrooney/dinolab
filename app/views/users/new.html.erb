<h1>Sign up to DinoLab Discussion!</h1>

<%= simple_form_for @user do |f| %>
	<%= f.input :name %>
	<%= f.input :username %>
	<%= f.input :email %>
	<%= f.input :password %>
	<%= f.input :password_confirmation %>

	<%= form_for @user, :url => users_path, :html => { :multipart => true } do |form| %>
	  <%= form.file_field :avatar %>
	<% end %>

	<%= f.button :submit, "Sign up" %>
<% end %>